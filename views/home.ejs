<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="/home.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <!-- <nav>
        <div>
            <a href="/login">Login</a>
            <a href="/sign-up">Sign Up</a>
            <a href="/description">A</a>
        </div>
    </nav> -->
    <header class="header">
        <div>
          <h1 class="header-title">Welcome to Coding Spiders App!</h1>
          <p class="header-desc">Click here to see how this App Works!</p> <br>
          <% if(logged) {%>
            <a href="/logout">Logout</a>
            <a href="/create">Create a post</a>
       <% } %>
       <% if(!logged) {%>
        <a href="/login">Login</a>
        <a href="/sign-up">Sign Up</a><br>
      <% } %>
      
          <a href="/description">About the project</a>
        </div>
    </header>
    <main>
        <div class="container">
            <% notes.forEach(note => { %>
                <div class="card">
                    <div class="face face1">
                        <div class="content">
                            <h3><%=note.title%></h3>
                            <div class="content-desc">
                              <p><%=note.date%>></p>
                              <br><br/>
                              <p>posted by <%=note.author%>></p>
                            </div>
                        </div>
                    </div>
                    <div class="face face2">
                        <div class="content">
                            <p><%=note.description%></p>
                                <a href="<%=note.links%>">Source</a>
                                <%if(author) { %>
                                    <% if(author == note.author) { %>
                                        <form action="/edit" method="GET">
                                        <input type="hidden" name="id" value="<%= note._id %>">
                                        <button type="submit">EDIT</button>
                                        </form>
                                   <% } %> 
                                   
                               <% } %>
                                
                        </div>
                    </div>
                  </div>
            <% }) %> 
          
        </div>
    </main>

  
      
  
</body>
</html>